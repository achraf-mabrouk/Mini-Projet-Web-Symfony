
{% extends 'base.html.twig' %}
{%block title%}Courses - My WebSite  {% endblock %}
{% block body %}
{% for message in app.flashes('fail') %}
<div class="alert alert-danger" style="margin-top:10px;" role="alert">
     <strong>{{message}}</strong> 
  </div>
	{% endfor %}
    {% for message in app.flashes('success') %}
    <div class="alert alert-success" role="alert">
        <strong>{{ message }}</strong>
    </div>
  {% endfor %}
   {% for message in app.flashes('info') %}
    <div class="alert alert-info" role="alert">
        <strong>{{ message }}</strong>
    </div>
  {% endfor %}

  {% for message in app.flashes('deleted') %}
    <div class="alert alert-warning" role="alert">
        <strong>{{ message }}</strong>
    </div>
  {% endfor %}
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Course Name</th>
      <th>Matiere Name</th>
      <th>PDF File</th>
    </tr>
  </thead>
  <tbody>
  {% for cours in courss %}
    <tr>
      <th scope="row">{{cours.id}}</th>
      <td>{{cours.nomCours}}</td>
      <td>{{cours.nomMat}}</td>
      <td>
      	<a href="{{ asset('uploads/PDF/' ~ cours.pdfFile) }}" target='_blank' class='btn btn-success'>View</a>
        <a href="/myproject/web/app_dev.php/cours/Edit/{{cours.id}}" class='btn btn-warning'>Edit</a>
      	<a href="/myproject/web/app_dev.php/cours/delete/{{cours.id}}" class='btn btn-danger'>Delete</a>
      </td>
      </td>
    </tr>
    
    {%endfor%}
  </tbody>
</table>

{% endblock %}